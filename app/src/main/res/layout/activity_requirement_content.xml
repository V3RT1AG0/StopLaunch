<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_requirement_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gamerequirements.Requirements.Requirement_content">

    <include layout="@layout/custom_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:background="@color/HeaderTitle"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#2c3e50"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2c3e50"
                    android:textColor="#ECEFF1"
                    android:paddingEnd="3sp"
                    android:paddingStart="3sp"
                    android:paddingTop="3sp"
                    android:paddingBottom="3sp"
                    android:text="@string/minimum_requirements"
                    android:textAlignment="center"
                    android:textSize="@dimen/HeadingFont"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/HEADING_intelCPU"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/CONTENT_intelCPU"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/HEADING_AMD_CPU"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/CONTENT_AMD_CPU"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/HEADING_NvidiaGPU"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/CONTENT_NvidiaGPU"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/HEADING_AMDGpu"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/CONTENT_AMDGpu"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/HEADING_RAM"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/CONTENT_RAM"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/HEADING_OS"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/CONTENT_OS"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/HEADING_HDD"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/CONTENT_HDD"
                        layout="@layout/content_textview"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2c3e50"
                    android:textColor="#ECEFF1"
                    android:paddingEnd="3sp"
                    android:paddingStart="3sp"
                    android:paddingTop="3sp"
                    android:paddingBottom="3sp"
                    android:text="@string/recommended_requirements"
                    android:textAlignment="center"
                    android:textSize="@dimen/HeadingFont"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/RHEADING_intelCPU"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/RCONTENT_intelCPU"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/RHEADING_AMD_CPU"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/RCONTENT_AMD_CPU"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/RHEADING_NvidiaGPU"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/RCONTENT_NvidiaGPU"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/RHEADING_AMDGpu"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/RCONTENT_AMDGpu"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/RHEADING_RAM"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/RCONTENT_RAM"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/RHEADING_OS"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/RCONTENT_OS"
                        layout="@layout/content_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/RHEADING_HDD"
                        layout="@layout/heading_textview"
                        />

                    <include
                        android:id="@+id/RCONTENT_HDD"
                        layout="@layout/content_textview"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
