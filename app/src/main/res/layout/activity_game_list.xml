<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_game_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gamerequirements.Requirements.GameListActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/custom_toolbar"/>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

        >




        <com.github.rahatarmanahmed.cpv.CircularProgressView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_view"
            android:layout_marginTop="70sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="60sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/my_gamelist_recycler"
            />

        <LinearLayout
            android:id="@+id/search_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- <EditText
                 android:hint="Enter game title"
                 android:id="@+id/search_TV"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/> -->

            <com.arlib.floatingsearchview.FloatingSearchView
                android:id="@+id/floating_search_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layerType="none"
                app:floatingSearch_searchHint="Enter game title..."
                app:floatingSearch_suggestionsListAnimDuration="250"
                app:floatingSearch_showSearchKey="false"
                app:floatingSearch_leftActionMode="showSearch"
                app:floatingSearch_dimBackground="false"
                app:floatingSearch_close_search_on_keyboard_dismiss="true"/>

        </LinearLayout>


</RelativeLayout>

</LinearLayout>
