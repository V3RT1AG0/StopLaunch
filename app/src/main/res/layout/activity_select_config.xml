<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop= "100dp"
    android:background="@color/colorPrimaryDark"
    tools:context="com.gamerequirements.SaveCofig.SelectConfig">


    <!--<Spinner
        android:id="@+id/myCpu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    Spinner/> -->

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_view"
        android:layout_marginTop="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true" />




    <LinearLayout
        android:id="@+id/ContentLL"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginBottom="10dp"
            android:textColor="@color/plainWhite"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Your System Hardware Configuration"/>


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/myCpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_horizontal"
            app:hintText="CPU"

            />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/myGpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_horizontal"
            app:hintText="GPU"
            />
        <!--TODO add spinner as a module and change layout-->
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/myRam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_horizontal"
            app:hintText="RAM"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/SaveConfig"
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/plainWhite"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/plainWhite"
            android:textAlignment="center"
            android:text="Skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>
