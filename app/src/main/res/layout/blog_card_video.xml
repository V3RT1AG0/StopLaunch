<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5sp"
    android:layout_marginStart="5sp"
    card_view:cardCornerRadius="2sp"
    card_view:cardElevation="4sp"

    >

    <LinearLayout
        android:id="@+id/Game_list_LL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/plainWhite"
        android:orientation="vertical">

        <com.pierfrancescosoffritti.androidyoutubeplayer.player.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/title_blog_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blacklight1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/subTitle_blog_video"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whitedark1"
            android:textSize="13sp"/>

        <LinearLayout
            android:id="@+id/cats_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />

        <LinearLayout
            android:id="@+id/tags_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>


    </LinearLayout>

</android.support.v7.widget.CardView>